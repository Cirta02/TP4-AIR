<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Driver PostgreSQL -->
        <property name="connection.driver_class">org.postgresql.Driver</property>

        <!-- URL PostgreSQL - base paris13 -->
        <property name="connection.url">jdbc:postgresql://localhost:5432/paris13</property>

        <!-- Nom d'utilisateur PostgreSQL -->
        <property name="connection.username">postgres</property>

        <!-- Mot de passe PostgreSQL -->
        <property name="connection.password">cirta</property>

        <!-- Dialecte Hibernate pour PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Affiche les requêtes SQL générées -->
        <property name="hibernate.show_sql">true</property>

        <!-- Format des requêtes SQL -->
        <property name="hibernate.format_sql">true</property>

        <!-- Mise à jour automatique du schéma de la base -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Pool de connexions -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

    </session-factory>
</hibernate-configuration>