<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <setting name="cacheEnabled" value="false"/>
    </settings>

    <typeAliases>
        <typeAlias type="TP4.univ.paris13.modelMybatis.Personne" alias="Personne"/>
        <typeAlias type="TP4.univ.paris13.modelMybatis.Adresse" alias="Adresse"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/paris13"/>
                <property name="username" value="postgres"/>
                <property name="password" value="cirta"/>
                <property name="poolMaximumActiveConnections" value="5"/>
                <property name="poolMaximumIdleConnections" value="2"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!-- UNIQUEMENT les mappers de classe - PAS de fichiers XML -->
        <mapper class="TP4.univ.paris13.mybatis.PersonneMapper"/>
        <mapper class="TP4.univ.paris13.mybatis.AdresseMapper"/>
    </mappers>
</configuration>